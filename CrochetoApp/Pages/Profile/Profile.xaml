<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CrochetoApp.Pages.Profile.Profile"
             Title="Profile" Shell.NavBarIsVisible="False">

    
    <Grid Margin="0,5,0,0" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Padding="5" RowSpacing="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackLayout Grid.Row="0" Orientation="Horizontal" Spacing="5" Padding="5">
            <Label Text="Crocheto" 
               HorizontalOptions="Start" 
               TextColor="#ff669a" FontAttributes="Italic" FontSize="Title" />
            <Label Text="®" TextColor="#ff669a" FontSize="Medium"></Label>
        </StackLayout>

        <StackLayout Grid.Row="1" Spacing="12">
            <Frame BackgroundColor="#ff669a">
                <Frame.Shadow>
                    <Shadow Radius="10" Opacity="1" Brush="#161616" Offset="10,10" />
                </Frame.Shadow>
                <StackLayout Orientation="Horizontal" Spacing="20">

                    <ImageButton Source="account.png" WidthRequest="35" HeightRequest="35" BackgroundColor="Transparent"  />

              
                    <StackLayout>
                        <Label Text="Isaias Badia" FontSize="24" TextColor="White" />
                        <Label Text="isaiasbadia@badiagroup.com" TextColor="White" />
                        <Label Text="Software Developer" TextColor="White" />
                    </StackLayout>

 
                    <ImageButton Source="outline.png" WidthRequest="35" HeightRequest="35" BackgroundColor="Transparent" HorizontalOptions="EndAndExpand" />
                </StackLayout>
            </Frame>
            <Frame BackgroundColor="#f76f9c" Margin="0" Padding="0" HasShadow="True">
                <Frame.Shadow>
                    <Shadow Radius="10" Opacity="1" Brush="#161616" Offset="10,10" />
                </Frame.Shadow>
                <StackLayout Spacing="15" Margin="10">
                    <StackLayout Orientation="Horizontal">
                        <Button Text="Account information" FontSize="16" BackgroundColor="Transparent" BorderColor="#f7f8f7"   />
                        <ImageButton Source="next.png" WidthRequest="30" HeightRequest="30" BackgroundColor="Transparent" HorizontalOptions="EndAndExpand" />
                    </StackLayout>
                    <StackLayout Orientation="Horizontal">
                        <Button  Clicked="newPassword" Text="Passwords" BackgroundColor="Transparent" FontSize="16" BorderColor="#f7f8f7"/>
                        <ImageButton Source="next.png" WidthRequest="30" HeightRequest="30" BackgroundColor="Transparent" HorizontalOptions="EndAndExpand" />
                    </StackLayout>
                    <StackLayout Orientation="Horizontal">
                        <Button Text="Privacy Policy" FontSize="16" BackgroundColor="Transparent" BorderColor="#f7f8f7" />
                        <ImageButton Source="next.png" WidthRequest="30" HeightRequest="30" BackgroundColor="Transparent" HorizontalOptions="EndAndExpand" />
                    </StackLayout>
                    <StackLayout Orientation="Horizontal">
                        <Button Text="Notification" BackgroundColor="Transparent" FontSize="16" BorderColor="#f7f8f7"/>
                        <ImageButton Source="next.png" WidthRequest="30" HeightRequest="30" BackgroundColor="Transparent" HorizontalOptions="EndAndExpand" />
                    </StackLayout>
                    <StackLayout Orientation="Horizontal">
                        <Button Text="Languages" BackgroundColor="Transparent" FontSize="16" BorderColor="#f7f8f7" />
                        <ImageButton Source="next.png" WidthRequest="30" HeightRequest="30" BackgroundColor="Transparent" HorizontalOptions="EndAndExpand" />
                    </StackLayout>
                    <StackLayout Orientation="Horizontal">
                        <Button Text="Share Crocheto ♥" BackgroundColor="Transparent" FontSize="16" BorderColor="#f7f8f7"/>
                        <ImageButton Source="share.png" WidthRequest="25" HeightRequest="30" BackgroundColor="Transparent" HorizontalOptions="EndAndExpand" Margin="5"/>
                    </StackLayout>


                </StackLayout>
            </Frame>
            <Frame BackgroundColor="#ff639e" Margin="0" VerticalOptions="EndAndExpand" Padding="0" HasShadow="True" >
                <Frame.Shadow>
                    <Shadow Radius="10" Opacity="1" Brush="#161616" Offset="10,10" />
                </Frame.Shadow>
                <StackLayout Orientation="Vertical" Padding="15">
                    <StackLayout Orientation="Vertical">
                        <Label Text="“Unlock Premium to gain full access to our extensive library of PDF patterns and enjoy a host of other benefits.With Premium take your creativity to the next level. Don’t miss out on this opportunity - go Premium today!”" FontSize="16" BackgroundColor="Transparent"  TextColor="#f7f8f7" />
                    </StackLayout>
                    
                    <ImageButton Source="next.png" WidthRequest="30" HeightRequest="30" BackgroundColor="Transparent" HorizontalOptions="EndAndExpand" />
                </StackLayout>
            </Frame>
        </StackLayout>
    </Grid>
</ContentPage>